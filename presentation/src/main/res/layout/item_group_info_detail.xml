<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:paddingStart="18dp">

        <ImageView
            android:id="@+id/iv_group"
            android:layout_width="114dp"
            android:layout_height="162dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_group_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            tools:text="sample text"
            android:layout_marginTop="12dp"
            android:textAppearance="@style/Typography.Body3_R"
            android:textColor="@color/Gray_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_group" />

        <TextView
            android:id="@+id/tv_group_organization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="sample text"
            android:textAppearance="@style/Typography.Body5_R"
            android:textColor="@color/Gray_8"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_group_description" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/ic_member"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_member"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tv_member_count_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="멤버수"
                android:textAppearance="@style/Typography.Body4_R"
                android:textColor="@color/Gray_15"
                app:layout_constraintStart_toEndOf="@+id/ic_member"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tv_member_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/ic_member"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/Gray_15"
                android:textAppearance="@style/Typography.Body3_M"
                tools:text="8"
                android:layout_marginStart="71dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/ic_manager"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_manager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tv_manager_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="관리자"
                android:textAppearance="@style/Typography.Body4_R"
                android:textColor="@color/Gray_15"
                app:layout_constraintStart_toEndOf="@+id/ic_manager"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tv_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/ic_manager"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/Gray_15"
                android:textAppearance="@style/Typography.Body3_M"
                tools:text="귤사람"
                android:layout_marginStart="71dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/ic_code"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_code"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tv_code_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="참여코드"
                android:textAppearance="@style/Typography.Body4_R"
                android:textColor="@color/Gray_15"
                app:layout_constraintStart_toEndOf="@+id/ic_code"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/ic_code"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/Gray_15"
                android:textAppearance="@style/Typography.Body3_M"
                tools:text="52A3P3"
                android:layout_marginStart="71dp" />

            <ImageView
                android:id="@+id/btn_copy"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="2dp"
                android:padding="2dp"
                app:layout_constraintStart_toEndOf="@id/tv_code"
                android:src="@drawable/ic_copy"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gray_5"
            android:layout_marginEnd="26dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</layout>
